<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_Activity"
    android:background="@color/colorAccent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_image"
                android:id="@+id/login_image"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

            </ImageView>

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_image"
                android:layout_alignParentStart="true"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:padding="4dp"
                android:textColor="#121010"
                android:textColorHint="#674C4C">

            </EditText>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_email"
                android:layout_alignParentStart="true"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/password"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:padding="4dp"
                android:textColor="#121010"
                android:textColorHint="#674C4C">

            </EditText>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password"
                android:padding="4dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:text="Login"
                android:textSize="30sp"
                android:background="@drawable/button">

            </Button>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password"
                android:text="Forget Password"
                android:textColor="#121010"
                android:textAlignment="textEnd"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

            </TextView>
            <TextView
                android:id="@+id/Register_New_Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New User Register Here!"
                android:textAlignment="center"
                android:textColor="#121010"
                android:layout_below="@id/login_btn"
                android:layout_alignParentStart="true"
                android:padding="4dp"
                android:layout_marginTop="10dp">

            </TextView>
            <TextView
                android:id="@+id/Login_using_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR login Using Phone"
                android:textAlignment="center"
                android:textColor="#121010"
                android:layout_below="@id/Register_New_Account"
                android:layout_alignParentStart="true"
                android:padding="4dp"
                android:layout_marginTop="10dp">

            </TextView>

            <Button
                android:id="@+id/Using_phone_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/Login_using_phone"
                android:text="Phone Login"
                android:textSize="30sp"
                android:background="@drawable/button">

            </Button>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>